
{% trans_default_domain 'ste_blog' %}
<H3>
    <b>{{ 'post.list.count'|trans }} = {{ articles|length }}</b>
    <br>
</H3>

{# LIST #}
{% if articles|length %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th><b>#</b></th>
                <th>{{ 'post.list.article_title'|trans }}</th>
                <th>{{ 'post.list.article_date'|trans }}</th>
                <th>{{ 'post.list.article_author'|trans }}</th>
                <th class="text-center">{{ 'post.action.show'|trans }}</th>
                <th class="text-center">{{ 'post.action.update'|trans }}</th>
                <th class="text-center">{{ 'post.action.delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}

                <tr>
                    <td><h4><b>{{ loop.index }}</b></h4></td>
                    <td><h4><b>{{ article.title }}</b></h4></td>
                    <td><h4>{{ article.date|date('Y-m-d H:i:s') }}</h4></td>
                    <td><h4><b>{{ article.author }}</b></h4></td>
                    <td class="text-center">
                        <a href="{{ path('article_detail', { 'id': article.id } ) }}">
                            <button type="button" class="btn btn-success btn-sm"><span
                                        class="glyphicon glyphicon-eye-open glyphicon-align-center"></span>
                            </button>
                        </a></td>
                    <td class="text-center"><a href="{{ path('article_update', { 'id': article.id } ) }}">
                            <button type="button" class="btn btn-primary btn-sm"><span
                                        class="glyphicon glyphicon-pencil"></span></button>
                        </a></td>
                    <td class="text-center"><a href="{{ path('article_delete', { 'id': article.id } ) }}">
                            <button type="button" class="btn btn-danger btn-sm"><span
                                        class="glyphicon glyphicon-trash"></span></button>
                        </a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endif %}

