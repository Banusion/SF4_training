{# EXTENSION DU LAYOUT #}
    {% extends 'layout.html.twig' %}

{# TITRE DE LA PAGE #}
    {% block title_page_content %}
        {% trans_default_domain 'ste_blog' %}
        {{ parent() }}
        {{ 'post.update.page_title'|trans|upper }}
    {% endblock %}

{# CONTENU DE LA PAGE #}
    {% block page_content %}
        {% trans_default_domain 'ste_blog' %}

        {{ form(mon_form) }}
        <div class="text-center">

            <a href="{{ path('article_list') }}">
                <button type="button" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-list"></span> {{ 'post.update.list'|trans|upper }}
                </button>
            </a>
        </div>

    {% endblock %}


